<body>
  <div class="edit">
  <h1><b>Editing Book</b></h1>

  <% if @book.errors.any? %>
  <div class="errors">
  <%= @book.errors.count %>errors prohibited this book from being saved:
  </div>
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>



  <%= form_with model:@book,local:true do |f| %>

  <div class="field">
  <h4>Title</h4>
  <%= f.text_field:title %>
  </div>

  <div class="field">
  <h4>Body</h4>
  <%= f.text_area:body %>
  </div>

  <div class="actions">
  <%= f.submit 'Update Book' %>
  </div>

  <% end %>

  <p> <%= link_to "Show",book_path(@book.id)%> | <%= link_to "Back",books_path %></p>

</div>
</body>

